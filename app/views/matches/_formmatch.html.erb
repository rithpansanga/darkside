
<% if @match.errors.any? %>


<ul>
	<% @match.errors.full_messages.each do |msg| %>

	<li><%= msg %></li>

	<% end %>
</ul>


<% end %>


<%= form_for @match do |f| %>

 	<p>
 		<%= f.label :result %>
 		<%= f.text_field :result %>
 		<%= f.collection_select(:home_id, Home.all, :id, :team_name) %>
 		<%= f.label :hscore %>
 		<%= f.text_field :hscore %>
 
 		<%= f.collection_select(:away_id, Away.all, :id, :team_name) %>
 		<%= f.label :ascore %>
 		<%= f.text_field :ascore %>

		<div class="form-group">
	        <div class='input-group date' id='datetimepicker1'>
	            <input type='text' class="form-control" name="match[date]" />
	            <span class="input-group-addon">
	                <span class="glyphicon glyphicon-calendar"></span>
	            </span>
	        </div>
	    </div>		 		
 		 <% # ender "matches/datepicker" %>
 		
 	</p>

 	<p>

 		<%= f.submit %>

 	</p>


<% end %>

<%= link_to "Back to League listing", leagues_path %>

<script type="text/javascript">
    $(function () {
        $('#datetimepicker1').datetimepicker();
    });
</script>
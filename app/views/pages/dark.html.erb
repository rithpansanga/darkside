
<div class="row">

	<div class="col-md-4 col-md-offset-4">



		<table class="table table-bordered">
	
		<tr>
	
		<th>Home</th>
		<th>Score</th>
		<th>Away</th>

		</tr>


		<% @matches.each do |match| %>

		<tr>

			<td><%= link_to match.home.team.name, team_path(match.home) %> </td>
			

			<td><%= link_to match.hscore, match_path(match)  %> - <%= link_to match.ascore,match_path(match) %> </td>


			<td><%= link_to match.away.team.name, team_path(match.home) %> </td>

		</tr>
		<% end %>

		</table>

	</div>

</div>
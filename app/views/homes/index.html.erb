<h1> Listing Homes</h1>
<%= link_to "Create new team", new_home_path,class: "btn btn-primary" %>



<div class="row">

	<div class="col-md-4 col-md-offset-4">



		<table class="table table-bordered">
	
<tr>
	
<th>Stadium</th>
<th>Team</th>
<th colspan="3">Function</th>
</tr>


<% @homes.each do |home| %>

<tr>

	<td><%= home.stadium %> </td>
	<td><%= home.team.name %> </td>
	<td><%= link_to "Edit", edit_home_path(home),class: "btn btn-primary"  %></td>
	<td><%= link_to "Show", home_path(home),class: "btn btn-info"  %></td>
	<td><%= link_to "Delete", home_path(home),class: "btn btn-danger" , method: :delete, data:{confirm: "Are you sure?"} %></td>
	

</tr>
<% end %>


</table>
</div>
</div>

<br><br>
<%= link_to "Back to Home listing", homes_path,class: "btn btn-primary" %>